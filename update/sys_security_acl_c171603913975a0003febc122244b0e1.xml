        <operation display_value="read">read</operation>
        <script><![CDATA[var userID = gs.getUserID();
var sysID = current.sys_id;
answer = false;

if(userID == current.created_for) {
	answer = true;
}

if(userID == current.opened_by) {
	answer = true;	
}

var ur = new GlideRecord('x_inhe_reim_ap_approvals');
ur.addQuery('rei_number', sysID);
ur.addQuery('approver', userID);
ur.query();
if(ur.next()) {
	answer = true;
} 
]]></script>
