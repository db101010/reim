        <name>Cancel Request</name>
        <onclick>rcancelrequest()</onclick>
        <order>100</order>
        <script><![CDATA[function rcancelrequest(){
	
	var r = confirm('Are you sure you want to cancel request?');
	if (r == true) {

		if(g_form.getValue('comments') == ''){
				//Remove any existing field message, set comments mandatory, and show a new field message
				try{g_form.hideFieldMsg('comments');}catch(e){}
				g_form.setMandatory('comments', true);
				alert('Comments are mandatory.');
				return false;  //Abort submission
			}	
		
	} else {
		
		return false;
	}
	
	gsftSubmit(null, g_form.getFormElement(), 'r_cancel_request'); //MUST call the 'Action name' set in this UI Action
}
	if(typeof window == 'undefined'){
		travelCancel();
}

function travelCancel(){
	
	current.state = 5;
	current.approval_state = 4;
	current.active = false;
	current.update();
}
]]></script>
